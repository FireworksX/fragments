{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["NODE_ENV", "ENABLE_HMR_IN_BACKGROUND_SCRIPT"],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "interruptible": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "interruptible": true
    },
    "lint": {
      "outputs": []
    },
    "release": {
      "cache": false,
      "persistent": false
    }
  }
}
