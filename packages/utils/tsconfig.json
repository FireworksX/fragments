{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",

    /* Bundler mode */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "src": ["./src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
